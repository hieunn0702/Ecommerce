@using AdvanceEshop.Models.ViewModel
@model CartItemViewModel

@{
    ViewData["Title"] = "Cart and Paypal Demo";
}


<!-- Cart Start -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th>Products</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                <tbody class="align-middle">

                    @if (Model.CartItems.Count > 0)
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td class="align-middle"><img src="/media/products/@item.Image" alt="" style="width: 50px;">@item.ProductName</td>
                                <td class="align-middle">$@(item.Price * (1 - item.Discount))</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <a asp-action="UpdateCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary btn-minus">
                                                <i class="fa fa-minus"></i>
                                            </a>
                                        </div>
                                        <input type="text" class="form-control form-control-sm bg-secondary text-center" value="@item.Quantity">
                                        <div class="input-group-btn">
                                            <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary btn-plus">
                                                <i class="fa fa-plus"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                                <td class="align-middle">$@(item.Price * (1 - item.Discount) * item.Quantity)</td>
                                <td class="align-middle"><a asp-action="RemoveCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary"><i class="fa fa-times"></i></a></td>

                            </tr>

                        }
                    <td class="align-middle"><a asp-action="Clear" asp-controller="Cart">Remove All</a> </td>
                    }

                </tbody>
            </table>
        </div>

        <div class="col-lg-4">
            <form class="mb-5" action="">
                <div class="input-group">
                    <input type="text" class="form-control p-4" placeholder="Coupon Code">
                    <div class="input-group-append">
                        <button class="btn btn-primary">Apply Coupon</button>
                    </div>
                </div>
            </form>
            <div class="card border-secondary mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="font-weight-semi-bold m-0">Cart Summary</h4>
                </div>
                @if (Model != null)
                {
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-3 pt-1">
                            <h6 class="font-weight-medium">Subtotal</h6>
                            <h6 class="font-weight-medium">@Model.GrandTotal.ToString()</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$0</h6>
                        </div>
                    </div>
                }
                @if (Model != null && Model.CartItems != null)
                {
                    <div class="card-footer border-secondary bg-transparent">
                        <div class="d-flex justify-content-between mt-2">
                            <h5 class="font-weight-bold">Total</h5>
                            <h5 class="font-weight-bold">$@Model.GrandTotal.ToString()</h5>
                        </div>
                        <input type="submit" name="payment" class="btn btn-block btn-primary my-3 py-3" value="Checkout">
                        <input type="submit" name="payment" class="btn btn-block btn-primary my-3 py-3" value="Thanh Toán VnPay">
                        <div id="paypal-button-container" class="btn btn-block btn-primary my-3 py-3" style="max-width:1000px;"></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Cart End -->

@section Scripts{

    <script src="https://www.paypal.com/sdk/js?client-id=@ViewBag.PaypalClientId"></script>
    <script>
        paypal.Buttons({
            style: {
                layout: 'vertical',
                color: 'silver',
                tagline: 'false'
            },
            createOrder: (data, actions) => {
                return fetch("/Paypal/PaypalOrder", {
                    method: "post",
                }).then((response) => {
                    if (!response.ok) {
                        return response.json().then(error => { throw error; });
                    }

                    return response.json();
                }).then((order) => order.id)
                    .catch(error => alert(error.message));
            },
            onApprove: (data, actions) => {
                return fetch(`/Paypal/PaypalCapture?orderId=${data.orderID}`, {
                    method: "post",
                }).then((response) => {
                    if (!response.ok) {
                        return response.json().then(error => { throw error; });
                    }

                    //Đổi địa chỉ tới action thông báo thành công
                    window.location.href = "/Paypal/Success";
                }).catch(error => alert(error.message));
            }
        }).render('#paypal-button-container');
    </script>
}