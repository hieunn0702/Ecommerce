@model IEnumerable<Category>
@{
    ViewData["title"] = "Category Lists";

}

<h2>Categories</h2>

<a asp-action="Create" asp-controller="Category" class="btn btn-primary btn-sm">Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category Name</th>
            <th scope="col">Category Image</th>
            <th scope="col">Category Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td><img src="/media/categories/@item.CategoryPhoto" width="120" /></td>
                <td>@item.CategoryOrder</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.CategoryId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>