@model IEnumerable<OrderModel>
@{
    ViewData["title"] = "Order Lists";

}

<h2>Orders</h2>

<a asp-action="Create" asp-controller="Category" class="btn btn-primary btn-sm">Add New Category</a>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>

            <th scope="col">UserName</th>
            <th scope="col">Order Status</th>
            <th scope="col">Order Date</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>


                <td>@item.UserName</td>
                <td>@item.CreatedDate</td>
                <td>

                    @if (item.Status == 1)
                    {
                        <span class="text text-success">Đơn hàng mới</span>
                        //<button class="btn btn-info btn-sm updateStatus" data-order-id="@item.Id">Duyệt đơn hàng</button>
                    }
                    else
                    {
                        <span class="text text-success">Đã duyệt đơn hàng</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="ViewOrder" asp-controller="Order" asp-route-ordercode="@item.OrderCode">View</a>
                </td>
                <td>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="DeleteOrder" asp-controller="Order" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>